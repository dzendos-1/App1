        <TextBox x:Name="login_txtBox" HorizontalAlignment="Left" Height="29" Margin="126,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="260" FontWeight="Bold" FontSize="14" VerticalContentAlignment="Center" MaxLines="1" IsUndoEnabled="False"/>
        <PasswordBox x:Name="password_txtBox" HorizontalAlignment="Left" Margin="126,65,0,0" VerticalAlignment="Top" Width="260" Height="29" FontWeight="Bold" FontSize="14" VerticalContentAlignment="Center" Grid.ColumnSpan="2"/>
        <Button Content="Войти" Margin="295,0,0,17" VerticalAlignment="Bottom" Height="27" RenderTransformOrigin="0.553,0.863" HorizontalAlignment="Left" Width="91" FontWeight="Bold" FontSize="14" Click="Button_Click"/>

    </Grid>
</Window>
